    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section customStyles
{
    <link href="~/Content/pc-css/cm.css" rel="stylesheet" />
}

<div class="banner-cm">
    @*<img src="~/Content/images/pc/cm/banner-cm.jpg" />
