@model IEnumerable<hairrecipe.Models.ProductListingViewModel>
@{
    ViewBag.Title = "HAIR RECIPE（ヘアレシピ) | P&amp;G";
    Layout = "~/Views/Shared/_Layout.Mobile.cshtml";
    ViewBag.Description = "そのレシピは、美となり髪となる。あなたが食べたものから、あなたはできている。このシンプルで普遍的な考えから。ヘアレシピは誕生しました。";
}

@section customStyles
{
    <link href="~/Content/mobile-hp.css" rel="stylesheet" />
}

<div class="content">
    <div class="content-wrapper wall-hp">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="section-heading">Products</h1>
                    <div class="spoon-h">
                        <img src="~/Content/images/sp/home/sp_hp-spoon-wood.png" />
                    </div>
                </div>
            </div>
        </div>

        <img src="~/Content/images/sp/home/sp_product-img-heading.png" />

        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    @foreach (var item in Model) {
                        @Html.Partial("_homeProductListing", item)
                    }
                    @{ Html.RenderPartial("_FootBannerSp", "");  }
                </div>
            </div>
        </div>
    </div>

    <div class="content-wrapper wood-hp">
        <p class="custom-section-heading">LIFE<br />
            with<br />
            HAIR RECIPE
        </p>
        <div class="spoon-h">
            <img src="~/Content/images/sp/home/sp_hp-spoon-wood.png" />
        </div>
        <div class="life-splash">
            <img src="~/Content/images/sp/home/sp_life-with-hairrecipe.jpg" />
        </div>
    </div>

    <div class="content-wrapper stitch-hp">
        <p class="section-heading news">News</p>
        <div class="spoon-h">
            <img src="~/Content/images/sp/home/sp_hp-spoon-wood.png" />
        </div>
        <div class="news-splash">
            <img src="~/Content/images/sp/sp_diagnosis-thumbnail.png" alt="あなたの髪、うるおっている？ジューシー度チェック" />
        </div>
        <div class="news-copy">
            <p class="news-date">2016.4.21</p>
            <p class="text">
                あなたの髪、うるおっていますか？髪のジュー<br />
                シー度をチェックするとあなたにピッタリなレ<br />
                シピをご提案！今すぐチェック！
            </p>
        </div>
        <div class="news-content-wrapper">
            <div class="news-content">
                <div class="news">
                    <img src="~/Content/images/sp/home/sp_news-thumb-1.jpg" alt="冬の髪に、旬のレシピいかがですか？ 売り切れ御礼！おかげさまで、完売しました。" />
                    <p class="text">
                        <span class="date">2015.11.19</span>
                        <br />
                        新メニュー、アップルジンジャー濃密保湿あたたかレシピ登場！乾燥しやすい冬の髪に、高濃度コンディショニング成分で濃密保湿。たっぷりうるおい髪…
                    </p>
                </div>

                <div class="news">
                    <img src="~/Content/images/sp/home/sp_news-thumb-2.jpg" alt="数量限定発売！夏の髪に、ごちそう。パワーチャージセット発売！" />
                    <p class="text">
                        <span class="date">2015.6.18</span>
                        <br />
                        夏の疲れた髪に、ごちそうエネルギーをパワーチャージできるジュースパックに入ったシャンプー＆トリートメントセットを数量限定で発売！
                    </p>
                </div>

                <div class="news">
                    <img src="~/Content/images/sp/home/sp_news-thumb-3.jpg" alt="ついに登場！詰め替え用シャンプー＆トリートメント！" />
                    <p class="text">
                        <span class="date">2015.6.18</span>
                        <br />
                        ついに登場！シャンプー＆トリートメントのお得な詰替え用。オンラインストアで価格をチェック！
                    </p>
                </div>
            </div>
        </div>
        <div class="centered-btn">
            <a href="#" class="btn generic-btn">
                Archive
            </a>
        </div>
    </div>

    <div class="content-wrapper wood-b-hp">
        <p class="section-heading news">Cm &amp; Movie</p>
        <div class="spoon-h">
            <img src="~/Content/images/sp/home/sp_hp-spoon-wood.png" />
        </div>
        <div class="news-splash">
            <img src="~/Content/images/sp/home/sp_cm-thumbnail.jpg" />
        </div>
        <div class="centered-btn">
            <a href="#" class="btn generic-btn">
                Watch other movies
            </a>
        </div>
    </div>
</div>