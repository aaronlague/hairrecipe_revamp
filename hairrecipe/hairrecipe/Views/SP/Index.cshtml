@model IEnumerable<hairrecipe.Models.ProductListingViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.Mobile.cshtml";
    ViewBag.Description = "Index page";
}

@section customStyles
{
    <link href="~/Content/mobile-hp.css" rel="stylesheet" />
}

<div class="content">
    
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Products</h1>
            </div>
        </div>
    </div>

    <img src="~/Content/images/sp/sp_product-img-heading.png" />

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                @foreach (var item in Model) {
                    @Html.Partial("_ProductListingBlockSp", item)
                }
            </div>
        </div>
    </div>

</div>