                        </div>
                    </div>
                    <div class="formbutton">
                        <button id="btnConfirm" type="button" name="confirmreview" class="imgfade"></button>
                    </div>
                </form>
            </div><!-- END: formfields -->
            <div class="result">
                <div class="buttons">
                    <button id="btnBack" type="button" name="backreview" class="imgfade" />
