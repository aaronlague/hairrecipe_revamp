@model hairrecipe.data.Entities.Products.Product 

<div id="@Model.Name" class="product-section @(Model.BackgroundClass)" >
    <img class="product-item" src="~/Content/images/sp/product/@(Model.Line)/@(Model.Name).png" alt="" />
    @if (!string.IsNullOrEmpty(Model.EnTitle))
    {
        <span class="en-title  full-length center">@Html.Raw(Model.EnTitle)</span>
    }

    <div class="content-area">
    @if (!string.IsNullOrEmpty(Model.JpTitle1)) { 
        <span class="jp-title-1 full-length center"> @Html.Raw(@Model.JpTitle1)</span>
    }
    @if (!string.IsNullOrEmpty(Model.JpTitle2)) {
        <span class="jp-title-2  full-length center">@Html.Raw(@Model.JpTitle2)</span>
    }
    @if (!string.IsNullOrEmpty(Model.Size) ) {
        <span class="size  full-length center">@Html.Raw(@Model.Size)</span>
    }
    @if (!string.IsNullOrEmpty(Model.JpTitle3))
    {
        <span class="jp-title-3  full-length center">@Html.Raw(@Model.JpTitle3)</span>
    }
    @if (!string.IsNullOrEmpty(Model.Description)) { 
        <p class="description  full-length center">@Html.Raw(@Model.Description)</p>
    }
    @if (Model.Columns.Count > 0) {
        <div class="additives  center">
            <ul class="columns @Html.Raw(Model.Columns.Count > 1 ? "multi" : "solo")">
                @foreach (var column in Model.Columns)
                {
                    <li class="column">
                        <ul class="phrases">
                            <li class="phrase-title">@column.Header</li>
                            @foreach (var phrase in column.Phrases)
                            {
                                <li class="phrase">@phrase.Text</li>
                            }
                        </ul>
                    </li>
                }
            </ul>
        </div>
    }
        @if (!string.IsNullOrEmpty(Model.Howtouse))
        {
            <span class="howtouse-hdr full-length center">How to Use</span>
            <div class="separator"></div>
            <p class="howtouse  full-length center">@Html.Raw(@Model.Howtouse)</p>
        }
        <ul class="actions">
            @if (Model.HasBIN == true)
            {
                <li>
                    <a class="btn to-shop-btn">TO SHOP</a>
                </li>
            }

            @if (Model.HasReview == true)
            {
                <li><a class="btn to-read-btn">レビューを書く</a></li>
                <li><a class="btn to-write-btn">レビューを読む</a></li>
                <li><a class="btn to-rate-btn"></a></li>               
            }
        </ul>
    </div>
</div>





