<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/global-css")
    @Styles.Render("~/Content/desktop-css")
    @Scripts.Render("~/bundles/modernizr")
    @if (IsSectionDefined("customStyles"))
    {
        @RenderSection("customStyles", required: false)
    }
</head>
<body>
    <div class="container-hairrecipe s">
        @{Html.RenderPartial("_navigation", "");}
        @RenderBody()
        @{Html.RenderPartial("_FooterBlock", "");}
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
