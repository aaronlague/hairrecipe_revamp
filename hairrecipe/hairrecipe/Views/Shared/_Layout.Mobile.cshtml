@{
    ViewBag.Title = "Mobile";
    string checkController = @ViewContext.RouteData.Values["Controller"].ToString();
    string checkAction = @ViewContext.RouteData.Values["ACtion"].ToString();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/global-css")
    @Styles.Render("~/Content/mobile-css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @Html.Partial("_navigation.Mobile", "")

    @if (checkController == "sp" && checkAction == "Index")
    {
        @Html.Partial("_slider", "")
    }
    
    <div class="main">
        @RenderBody()
    </div>
    <div class="page-footer">
        <img src="~/Content/images/sp/_footer-placeholder.jpg" class="img-responsive" />
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
