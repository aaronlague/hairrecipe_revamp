@model hairrecipe.Models.ProductListingViewModel
<div class="product-item">
    <p class="product-name">@Html.Raw(Model.ProductName)</p> 
    <img src="/Content/images/sp/home/@Model.ProductImage" class="product-thumbnail"/>
    <p class="product-intro-text">@Model.ProductIntroText1<br />@Model.ProductIntroText2</p>
    <a href="@Model.ProductLink" class="btn to-shop-btn">To Shop</a>
</div>
        